# Basic Settings
set $mod Mod4
set $term alacritty
set $browser firefox

# Default workspace
workspace 1 output DP-3
workspace 9 output DP-4

workspace 9
exec firefox

exec 'sleep 3; swaymsg workspace 1'

# Bindings
bindsym Ctrl+Shift+Print exec grim -g "$(slurp -d)" - | wl-copy
bindsym $mod+Shift+Return exec $browser
bindsym $mod+Alt+l exec $lock

# Visual
gaps inner 8
font pango: Iosevka 9
default_border pixel 2

set $cl_high #962a54
set $cl_indi #962a54
set $cl_back #231f20
set $cl_fore #962a54
set $cl_urge #ee2e24

client.focused          $cl_high $cl_high $cl_fore $cl_indi $cl_high
client.focused_inactive $cl_back $cl_back $cl_fore $cl_back $cl_back
client.unfocused        $cl_back $cl_back $cl_fore $cl_back $cl_back
client.urgent           $cl_urge $cl_urge $cl_fore $cl_urge $cl_urge

# Display
output DP-3 resolution 3840x2160@59.997Hz
output DP-4 resolution 3840x2160@59.997Hz
output DP-4 transform 270
output * scale 1.5
# output * background '~/.config/wallpaper.png' fill
exec glpaper -f 60 DP-3 worley.frag
focus output DP-3

set $lock swaylock --clock --indicator --screenshots --effect-scale 0.4 --effect-vignette 0.2:0.5 --effect-blur 4x2 --datestr "%a %e.%m.%Y" --timestr "%k:%M" -c 550000
exec swayidle -w \
    timeout 600 $lock \
    timeout 570 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep $lock
